<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/match_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load" />

    <TextView
        android:id="@+id/match_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/match_loaded_info"
                android:layout_width="match_parent"
                android:layout_height="130dp" />

            <CheckBox
                android:id="@+id/match_sort_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sort results" />

            <Button
                android:id="@+id/match_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Match" />

            <Spinner
                android:id="@+id/match_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/match_results"
                android:layout_width="match_parent"
                android:layout_height="130dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>